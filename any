import Toast from 'lightning/toast';

const toastError = function (ctx, options) {
    const { title, message } = options;
    toastShow(ctx, title, message, 'error' );
};

const toastSuccess = function (ctx, options) {
    const { title, message } = options;
    toastShow(ctx, title, message, 'success');
};

const toastInfo = function (ctx, options) {
    const { title, message } = options;
    toastShow(ctx, title, message, 'info');
};

const toastWarn = function (ctx, options) {
    const { title, message } = options;
    toastShow(ctx, title, message, 'warning');
};

const toastShow = function (ctx, title, message, variant) {
    Toast.show(
        {
            label: title,
            message: message,
            variant: variant,
            mode: 'pester'
        },
        ctx
    );
};

export { toastError, toastSuccess, toastInfo, toastWarn };
